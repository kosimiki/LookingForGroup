<?xml version="1.0" encoding="utf-8"?>
<!-- fragment_screen_slide_page.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="@color/post_color_light">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="@string/new_post"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:id="@+id/new_post" android:layout_weight="1"/>
        </LinearLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <Button
                    android:text="New posts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/load_new_posts"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_marginBottom="10dp"
                    android:typeface="normal"
                    android:textSize="12sp" android:visibility="gone"/>

            <ListView android:id="@+id/looking_for_members_list_view"
                      style="@style/Widget.AppCompat.ListView"
                      android:fillViewport="true"
                      android:divider="@android:color/transparent"
                      android:dividerHeight="10.0sp"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
                      android:layout_alignParentStart="true" android:paddingLeft="0dp" android:paddingRight="0dp"
                      android:layout_marginLeft="0dp" android:layout_marginRight="0dp" android:layout_margin="0dp"
                      android:padding="5dp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>